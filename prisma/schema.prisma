generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Crochet {
  id          String   @id @default(cuid()) @unique
  name        String
  imagePath   String
  imageHash   String?
  description String
  category    Category
  price       Float?
  isVisible   Boolean  @default(true) // Admin controls visibility in public gallery
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id          String      @id @default(cuid()) @unique
  requestorId String      @db.Uuid
  requestId   String      @unique
  totalPrice  Float?
  status      OrderStatus
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user      User       @relation(fields: [requestorId], references: [id], onDelete: Cascade)
  request   Request    @relation(fields: [requestId], references: [id], onDelete: Cascade)
  orderChat OrderChat?
}

enum OrderStatus {
  PENDING
  PROCESSING
  DELIVERED
  CANCELED
}

enum Category {
  ACCESSORY
  HOME_DECOR
  TOY
  WEARABLE
  OTHERS
}

// Request model for custom order requests with approval flow
model Request {
  id          String        @id @default(cuid()) @unique
  userId      String        @db.Uuid
  user        User          @relation(name: "RequestUser", fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String
  imagePath   String? // Optional Supabase Storage path for reference image
  status      RequestStatus @default(PENDING)

  // Admin response
  adminResponse String? // Admin's response message
  approvedAt    DateTime? // When admin approved the request
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  order         Order?

  @@index([userId])
  @@index([status])
}

// Enum to track the status of custom order requests through the admin review process
enum RequestStatus {
  PENDING // Waiting for admin review
  APPROVED // Admin approved, user can proceed
  REJECTED // Admin rejected
  COMPLETED // Order completed
  CANCELLED // User cancelled the request
}

// User model with role-based access control and ban functionality
model User {
  id        String   @id @db.Uuid
  name      String
  email     String
  image     String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  requests     Request[]     @relation(name: "RequestUser") // User's custom order requests
  orders       Order[]
  orderChats   OrderChat[]
  chatMessages ChatMessage[]

  @@unique([email])
}

model OrderChat {
  id        String   @id @default(cuid()) @unique
  orderId   String   @unique
  userId    String   @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order    Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]
}

model ChatMessage {
  id          String   @id @default(cuid()) @unique
  orderChatId String
  authorId    String   @db.Uuid
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  chat   OrderChat @relation(fields: [orderChatId], references: [id], onDelete: Cascade)
  author User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}
